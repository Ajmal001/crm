{
    "name": "oro/crm",
    "description": "OroCRM",
    "homepage": "https://github.com/orocrm/crm.git",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "http://www.orocrm.com"
        }
    ],
    "autoload": {
        "psr-4": {"": "src/"},
        "exclude-from-classmap": ["/Tests/"]
    },
    "require": {
        "php": ">=7.0",
        "oro/platform": "2.2.*",
        "oro/crm-task-bundle": "2.2.*",
        "oro/crm-call-bundle": "2.2.*",
        "oro/calendar-bundle": "2.2.*",
        "oro/marketing": "2.2.*"
    },
    "require-dev": {
        "sensio/generator-bundle": "3.1.2",
        "behat/behat": "3.2.2",
        "behat/mink-extension": "2.2.*",
        "behat/mink-selenium2-driver": "1.*",
        "behat/symfony2-extension": "2.1.1",
        "nelmio/alice": "2.2.*",
        "phpunit/phpunit": "5.7.*",
        "johnkary/phpunit-speedtrap": "1.0.*",
        "mybuilder/phpunit-accelerator": "1.2.*",
        "squizlabs/php_codesniffer": "2.7.*",
        "phpmd/phpmd": "2.5.*",
        "sebastian/phpcpd": "2.0.*"
    },
    "repositories": {
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    }
}
