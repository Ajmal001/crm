{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}

{% set entityId = form.vars.value.id %}
{% oro_title_set({params : {"%entity.name%": entity.name, "%entityName%": 'orocrm.campaign.emailcampaign.entity_label'|trans }}) %}
{% set formAction = entityId ? path('orocrm_email_campaign_update', { 'id': entityId}) : path('orocrm_email_campaign_create') %}

{% block navButtons %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_api_delete_emailcampaign', {'id': entity.id}),
            'dataRedirect': path('orocrm_email_campaign_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'entity_label': 'orocrm.campaign.emailcampaign.entity_label'|trans
        }) }}
    {% endif %}
    {{ UI.cancelButton(path('orocrm_email_campaign_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('orocrm_email_campaign_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_email_campaign_index'),
            'indexLabel': 'orocrm.campaign.emailcampaign.entity_plural_label'|trans,
            'entityTitle': form.vars.value.name
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orocrm.campaign.emailcampaign.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'orocrm_email_campaign_form-profile' %}
    {% set dataBlocks = [{
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'title': '',
                    'data': [
                        form_row(form.name),
                        form_row(form.schedule),
                        form_row(form.scheduledAt),
                        form_row(form.campaign),
                        form_row(form.marketingList),
                        form_row(form.template),
                        form_row(form.description),
                    ]
                }
            ]
        }]
    %}

    <script type="text/javascript">
        require(
            ['jquery', 'oroemail/js/email/template/view', 'oroemail/js/email/template/collection'],
            function($, View, Collection) {
                $(function () {
                    'use strict';
                    new View({
                        el: $('[name="orocrm_email_campaign[marketingList]"]'),
                        target: $('#orocrm_email_campaign_template'),
                        collection: new Collection('orocrm_api_get_emailcampaign_email_templates', 'id')
                    });
                });
            })
    </script>
    <script type="text/template" id="emailtemplate-chooser-template">
        <% _.each(entities, function(entity, i) { %>
        <option value="<%= entity.get('id') %>"><%= entity.get('name') %></option>
        <% }); %>
    </script>

    {% set data =
        {
            'formErrors': form_errors(form)? form_errors(form) : null,
            'dataBlocks': dataBlocks
        }
    %}
    {{ parent() }}
{% endblock content_data %}
