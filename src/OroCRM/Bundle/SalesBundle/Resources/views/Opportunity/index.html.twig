{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'sales-opportunity-grid' %}
{% set pageTitle = 'orocrm.sales.opportunity.entity_plural_label'|trans %}

{% block navButtons %}
    {% if resource_granted('oro_importexport_import') %}
        <div class="btn-group">
            <a type="button"
               class="btn no-hash"
               target="_blank"
               href="#">
                {{ 'oro.importexport.import.tempate'|trans }}
            </a>
        </div>
    {% endif %}

    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entityClass: 'OroCRM\\Bundle\\SalesBundle\\Entity\\Opportunity',
        exportProcessor: 'orocrm_sales_opportunity',
        importTitle: 'oro.importexport.import.entity'|trans({'%entityName%': 'orocrm.sales.opportunity.entity_plural_label'|trans}),
        dataGridName: gridName
    } %}

    {% if resource_granted('orocrm_sales_opportunity_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('orocrm_sales_opportunity_create'),
                'entity_label': 'orocrm.sales.opportunity.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
