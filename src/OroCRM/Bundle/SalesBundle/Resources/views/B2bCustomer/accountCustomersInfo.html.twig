{% if resource_granted('orocrm_magento_customer_view') and customers|length > 0 %}
    <div class="widget-content">
        {% set tabs = [] %}
        {% for customer in customers %}
            {% set tabs = tabs|merge([
                {
                    'alias': 'orocrm_sales_b2bcustomer_info_customer_' ~ customer.id ~ '_channel_' ~ channel.id,
                    'widgetType': 'block',
                    'label': customer.name,
                    'url': path('orocrm_sales_widget_b2bcustomer_info', {'id': customer.id, 'channelId': channel.id})
                }
            ]) %}
        {% endfor %}
        {{ tabPanel(tabs) }}
    </div>
{% endif %}
