{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig', 'OroTagBundle:Form:fields.html.twig'] %}

{% oro_title_set({params : {"%b2bcustomer.name%": entity.name} }) %}

{% set formAction = form.vars.value.id ? path('orocrm_sales_b2bcustomer_update', { 'id': form.vars.value.id }) : path('orocrm_sales_b2bcustomer_create')  %}

{% block head_script %}
    {{ parent() }}

    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('orocrm_sales_b2bcustomer_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('orocrm_sales_b2bcustomer_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_sales_b2bcustomer_index'),
            'indexLabel': 'orocrm.sales.b2bcustomer.entity_plural_label'|trans,
            'entityTitle': entity.name
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orocrm.sales.b2bcustomer.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block stats %}
    <li>{{ 'oro.ui.created_at'|trans }}: {{ entity.createdAt ? entity.createdAt|oro_format_datetime : 'N/A' }}</li>
    <li>{{ 'oro.ui.updated_at'|trans }}: {{ entity.updatedAt ? entity.updatedAt|oro_format_datetime : 'N/A' }}</li>
{% endblock stats %}

{% block content_data %}
    {% set id = 'b2bcustomer-profile' %}

    {% set formFields = [] %}
    {% if form.owner is defined %}
        {% set formFields = formFields|merge([form_row(form.owner)]) %}
    {% endif %}

    {% set dataChannelClasses = '' %}

    {% if form.dataChannel.vars.value is not empty %}
        {% set dataChannelClasses = 'hide' %}
    {% endif %}

    {% set formFields = formFields|merge([
        form_row(form.name),
        form_row(form.dataChannel, {'attr': {'class':dataChannelClasses}}),
        form_row(form.account),
        form_row(form.contact),
        form_row(form.tags),
    ]) %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': 'orocrm.sales.widgets.b2bcustomer_information'|trans,
            'data': formFields
        }]
    }] %}

    {% set dataBlocks = dataBlocks|merge( [{
        'title' : 'Addresses'|trans,
        'subblocks': [
        {
            'title': 'orocrm.sales.b2bcustomer.billing_address.label'|trans,
            'data': [form_widget(form.billingAddress)]
        },
        {
            'title': 'orocrm.sales.b2bcustomer.shipping_address.label'|trans,
            'data': [form_widget(form.shippingAddress)]
        },
        ]
    }] ) %}

    {% if form.additional is defined and form.additional.children|length > 0 %}
        {% set additionalData = [] %}
        {% for value in form.additional %}
            {% set additionalData = additionalData|merge([form_row(value)]) %}
        {% endfor %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional Information'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }]
        ) %}
    {% endif %}

    {% if form.leads is defined%}
        {% set dataBlocks = dataBlocks|merge([{
            'title' : 'orocrm.sales.b2bcustomer.leads.label'|trans,
            'subblocks': [{
                'title' : null,
                'useSpan': false,
                'data' : [
                    form_widget(form.leads)
                ]
            }]
        }] ) %}
    {% endif %}

    {% if form.opportunities is defined%}
        {% set dataBlocks = dataBlocks|merge([{
            'title' : 'orocrm.sales.b2bcustomer.opportunities.label'|trans,
            'subblocks': [{
            'title' : null,
            'useSpan': false,
                'data' : [
                    form_widget(form.opportunities)
                ]
            }]
        }] ) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
