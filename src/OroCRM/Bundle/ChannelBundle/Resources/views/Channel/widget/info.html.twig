{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set channelTypes = orocrm_channel_type_metadata() %}
<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orocrm.channel.name.label'|trans, channel.name) }}
            {{ UI.renderProperty('orocrm.channel.channel_type.label'|trans, channelTypes[channel.channelType]) }}
            {% if(channel.dataSource) %}
                {{ UI.renderProperty('orocrm.channel.data_source.label'|trans, channel.dataSource.name) }}
            {% endif %}
            {{ UI.renderProperty('orocrm.channel.customer_identity.label'|trans, oro_entity_config_value(channel.customerIdentity, 'label')|trans) }}

        </div>
    </div>
</div>

