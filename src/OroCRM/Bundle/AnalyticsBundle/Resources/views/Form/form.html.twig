{% if form is defined and form.recency is defined or form.frequency is defined or form.monetary is defined %}
    {% set options = {rfm_enable_id: form.rfm_enabled.vars.id} %}
    <div class="rfm-settings {% if form.vars.value.data.rfm_enabled %}rfm-enabled{% endif %}"
        data-page-component-module="orocrmanalytics/js/app/components/rfm-settings"
        data-page-component-options="{{ options|json_encode }}">

        <h4>{{ 'orocrm.analytics.form.rfm_setting.title'|trans }}</h4>

        {{ form_row(form.rfm_enabled) }}

        <div class="hide">
            {% if form.recency is defined %}
                {{ form_widget(form.recency) }}
            {% endif %}
            {% if form.frequency is defined %}
                {{ form_widget(form.frequency) }}
            {% endif %}
            {% if form.monetary is defined %}
                {{ form_widget(form.monetary) }}
            {% endif %}
        </div>

        <div class="rfm-settings-data">
            <div class="oro-clearfix">
                <div class="pull-right">
                    <button type="button" class="btn btn-primary action-add">
                        <i class="icon-plus"></i> {{ 'orocrm.analytics.title.add_row'|trans }}
                    </button>
                </div>
            </div>

            <table class="grid table-hover table table-bordered table-condensed">
                <thead>
                <tr>
                    <th><label>{{ 'orocrm.analytics.form.score.title'|trans }}</label></th>
                    <th>
                        {{ form_label(form.recency) }}
                        {{ 'orocrm.analytics.form.hint.recency'|trans }}
                    </th>
                    <th>
                        {{ form_label(form.frequency) }}
                        {{ 'orocrm.analytics.form.hint.frequency'|trans }}
                    </th>
                    <th>
                        {{ form_label(form.monetary) }}
                        {{ 'orocrm.analytics.form.hint.monetary'|trans }}
                    </th>
                    <th class="action-column"><label>{{ 'orocrm.analytics.form.actions.title'|trans }}</label></th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
{% endif %}
