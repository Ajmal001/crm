{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'accounts-grid' %}
{% set pageTitle = 'orocrm.account.entity_plural_label'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        exportProcessor: 'orocrm_account'
    } %}

    {% if resource_granted('orocrm_account_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('orocrm_account_create'),
                'entity_label': 'orocrm.account.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
